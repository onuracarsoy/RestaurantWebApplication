@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;
@model IPagedList<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="table-responsive">
    <table class="table table-striped">
        <thead>

            <tr>
                <th>#</th>
                <th>Resmi</th>
                <th>Ürün Adı</th>
                <th>Kategori</th>
                <th>Fiyat</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td><img src="@item.ProductImage" style="height:100px; width:100px;"/></td>
                    <td>@item.ProductName</td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.ProductPrice</td>

                    <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
                    <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn mb-1 btn-rounded btn-warning">Güncelle</a></td>
                    <td><a href="/Product/DetailsProduct/@item.ProductID" class="btn mb-1 btn-rounded btn-primary">Detaylar</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>
<br/>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}), new PagedListRenderOptions { LinkToFirstPageFormat = "<< İlk", LinkToPreviousPageFormat = "< Önceki", LinkToNextPageFormat = "Sonraki >", LinkToLastPageFormat = "Son >>" })





